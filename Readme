sudo apt-get clean

-- EC2 Connect
-- mount the volume
lsblk
sudo mkfs -t ext4 /dev/sdd
sudo mkdir /mnt/data
sudo mount /dev/sdd /mnt/data
df -h

-- automatic mount at boot
echo '/dev/xvdd /mnt/data ext4 defaults,nofail 0 2' | sudo tee -a /etc/fstab  


-- EC2 Connect
